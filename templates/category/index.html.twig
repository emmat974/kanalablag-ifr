{% extends 'base.html.twig' %}

{% block title %}Catégories de blague{% endblock %}

{% block body %}
    <h1>Catégories de blague</h1>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Créer le</th>
                <th>Mise à jour</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.description }}</td>
                <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ category.updatedAt ? category.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_category_show', {'id': category.id}) }}">Voir</a>
                    <a class="btn btn-warning" href="{{ path('app_category_edit', {'id': category.id}) }}">Éditez</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas de blague enregistrer</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-dark" href="{{ path('app_category_new') }}">Créer une nouvelle catégorie</a>
{% endblock %}
